<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blue_shade_1"
    android:id="@+id/idRLBSheet">

    <TextView
        android:id="@+id/idTVItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:text="Item Name"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <ImageView

        android:id="@+id/idIVItem"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/idTVItemName"
        android:layout_centerVertical="true"
        android:layout_margin="4dp"
        android:padding="4dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/idTVDescription"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/idIVItem"
        android:layout_below="@id/idTVItemName"
        android:padding="3dp"
        android:layout_margin="4dp"/>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price"
        android:id="@+id/idTVPrice"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/idIVItem"
        android:layout_below="@id/idTVDescription"
        android:padding="3dp"
        android:layout_margin="4dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/idIVItem">

        <Button
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="Edit Item"
            android:textAllCaps="false"
            android:textColor="@color/blue_shade_1"
            android:id="@+id/idBtnEdit"
            />

        <Button
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="4dp"
            android:text="View Item"
            android:textAllCaps="false"
            android:textColor="@color/blue_shade_1"
            android:id="@+id/idBtnViewDetails"
            />




    </LinearLayout>



</RelativeLayout>